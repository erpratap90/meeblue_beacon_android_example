<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background_selector"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Meeblue"
                android:textColor="@color/colorPrimary" />
            <TextView
                android:id="@+id/device_rssi"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:paddingRight="0dp"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:gravity="left"
                android:layout_gravity="end"
                android:text="Rssi:-80"
                android:textColor="@color/textgray" />
        </FrameLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/device_connectable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="1dp"
                android:paddingRight="15dp"
                android:textSize="14sp"
                android:text="Connectable: True"
                android:textColor="@color/textgray" />
        </FrameLayout>

        <TextView
            android:id="@+id/device_local_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="1dp"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:text="Connectable: True"
            android:textColor="@color/textgray" />

        <TextView
            android:id="@+id/tx_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="1dp"
            android:paddingRight="15dp"
            android:textSize="14sp"
            android:text="Connectable: True"
            android:textColor="@color/textgray" />

        <TextView
            android:id="@+id/device_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="1dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:text="Connectable: True"
            android:textColor="@color/textgray" />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="5dp"
        android:contentDescription="Logo"
        android:layout_gravity="right|center_vertical"
        app:srcCompat="@drawable/icon_arrow_right_grey" />
</FrameLayout>

